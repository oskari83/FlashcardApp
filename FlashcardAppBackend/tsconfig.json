{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "./client",
    "module": "commonjs",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
	"lib": ["es6", "es7", "es2016", "es2017", "dom"],
	"types": ["node"],
  },
  "include": ["src/**/*"]
}
